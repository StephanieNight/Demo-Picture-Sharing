@model List<Uri>

<div class="bg-white sticky-top text-center">
    <h1>Galleri</h1>
    <a href="@Url.Action("Index", "Home")" class="btn btn-warning give-me-space">Til Forsiden</a>
</div>
<div class="row row-cols-xl-6 row-cols-sm-4">
    @foreach (var url in Model)
    {
        <div class="col d-flex" style="margin-bottom:16px">
            <div class="card">
                <img src="@url" alt="Image" class="card-img-top" />
                <div class="card-body d-flex align-items-end justify-content-center">
                    <a class="btn btn-primary" href="@Url.Action("DownloadFile", "Home", new { url = @url })">Download</a>
                </div>
            </div>
        </div>
    }
</div>
